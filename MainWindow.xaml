            <TextBox x:Name="Q1" Text ="{Binding Value, ElementName=Qslider1, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Top" Margin="10,0,11,0" Height="39"/>
        </DockPanel>

