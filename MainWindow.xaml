        </DockPanel>
        <DockPanel x:Name="Filtro5" HorizontalAlignment="Left" Height="435" LastChildFill="False" Margin="395,44,0,10" VerticalAlignment="Center" Width="75">
            <Label Content="Boost" DockPanel.Dock="Top" Foreground="#FFBFBFBF"/>
